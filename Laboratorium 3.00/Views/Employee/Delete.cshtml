@{
}

<h2>Usuwanie Pracownika</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Imię</dt>
        <dd>@Model.FirstName</dd>
        <dt>Nazwisko</dt>
        <dd>@Model.LastName</dd>
        <dt>Pesel</dt>
        <dd>@Model.PESEL</dd>
        <dt>Stanowisko</dt>
        <dd>@Model.Position</dd>
        <dt>Data Zatrudnienia</dt>
        <dd>@Model.HireDate</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed" asp-controller="Employee" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Potwierdź usunięcie</button> | <a asp-action="Index" asp-controller="Employee">Anuluj</a>
</form>