@{
}

<form asp-action="Create" asp-controller="Employee" method="post">
    <div asp-validation-summary="All"></div>

    <div>
        <label asp-for="FirstName">Imię</label>
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="FirstName" />
    </div>

    <div>
        <label asp-for="LastName">Nazwisko</label>
        <div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="LastName" />
    </div>
    <div>
        <label asp-for="Priority">Kategoria</label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Category>()"></select>
    </div>
    <div>
        <div class="form-group">
            <label asp-for="OrganizationId" class="control-label"></label>
            <select asp-for="OrganizationId" asp-items="@ViewBag.Organizations" class="form-control"></select>
        </div>

    <div>
        <label asp-for="Position">Stanowisko</label>
        <div>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
        <select asp-for="Position" asp-items="Html.GetEnumSelectList<Position>()"></select>
    </div>

    <div>
        <label asp-for="Department">Dział</label>
        <div>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Department" />
    </div>





    <button type="submit">Zapisz</button>
</form>
